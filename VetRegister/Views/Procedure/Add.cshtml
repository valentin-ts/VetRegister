
@model ProcedureFormModel

@{
    ViewData["Title"] = "Add Procedure";
}

<form method="post">

    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" placeholder="New procedure description">
        <span asp-validation-for="Description" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CreatedOn"></label>
        <input asp-for="CreatedOn" class="form-control" placeholder="New procedure date">
        <span asp-validation-for="CreatedOn" class="small text-danger"></span>
    </div>
    <input class="btn btn-primary float-right" type="submit" value="Save" />
</form>