
@model IEnumerable<ProcedureViewModel>

@{
    ViewData["Title"] = "All Procedures";
}

<form>
    <br>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th scope="col">
                    <label>Date</label>
                </th>
                <th scope="col">
                    <label>Description</label>
                </th>
                <th scope="col">
                    <label>Doctor</label>
                </th>
                <th scope="col">
                    <label>Animal</label>
                </th>
                <th scope="col">
                    <label>Details</label>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var procedure in Model)
            {
            <tr>
                <td>@procedure.CreatedOn</td>
                <td>@procedure.Description</td>
                <td>@procedure.DoctorName</td>
                <td>@procedure.AnimalName</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Procedure" asp-action="Details" asp-route-id="@procedure.Id">Details</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
    <br>
    @*<div class="col-md-12 text-center">
        <a class="btn btn-primary" asp-area="" asp-controller="Clinics" asp-action="Add">Add New Procedure</a>
    </div> *@
</form>