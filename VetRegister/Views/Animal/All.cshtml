@model AllAnimalsQueryModel

@{
    ViewData["Title"] = "All Animals";
}

<form method="get">

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th scope="col">
                    <label asp-for="NameFilter"></label>
                    <input asp-for="NameFilter" class="form-control" placeholder="Add Filter ...">
                </th>
                <th scope="col">
                    <label asp-for="SpecieFilter"></label>
                    <select asp-for="SpecieFilter" class="form-control" placeholder="Add Filter ...">
                        <option value="">All Species ...</option>
                        @foreach (var specie in Model.Species)
                        {
                            <option value="@specie.Id">@specie.Name</option>
                        }
                    </select>
                </th>
                <th scope="col">
                    <label asp-for="DateOfBirthFilter"></label>
                    <input asp-for="DateOfBirthFilter" class="form-control" placeholder="Add Filter ...">
                </th>
                <th scope="col">
                    <label asp-for="AgeFilter"></label>
                    <input asp-for="AgeFilter" class="form-control" placeholder="Add Filter ...">
                </th>
                <th scope="col">
                    <input class="btn btn-primary" type="submit" value="Apply Search Filters" />
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var animal in Model.Animals)
            {
                <tr>
                    <td>@animal.Name</td>
                    <td>@animal.SpecieName</td>
                    <td>@animal.DateOfBirth</td>
                    <td>@animal.Age</td>
                    <td>
                        <a class="btn btn-primary" asp-controller="Animal" asp-action="Details" asp-route-id="@animal.Id">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="col-md-12 text-center">
        <a class="btn btn-primary" asp-area="" asp-controller="Animal" asp-action="Add">Add New Animal</a>
    </div>
</form>



