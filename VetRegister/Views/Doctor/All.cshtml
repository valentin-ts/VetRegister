@model IEnumerable<DoctorViewModel>

@{
    ViewData["Title"] = "All Doctors";
}

<form>
    <br>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th scope="col">
                    <label>Doctor Name</label>
                </th>
                <th scope="col">
                    <label>Doctor's Clinic</label>
                </th>
                <th scope="col">
                    <label>Procedures done</label>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var doctor in Model)
            {
                <tr>
                    <td>@doctor.Name</td>
                    <td>@doctor.ClinicName</td>
                    <td>@doctor.ProceduresCount</td>
                    <td>
                        <a class="btn btn-primary" asp-controller="Doctor" asp-action="Details" asp-route-id="@doctor.Id">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>