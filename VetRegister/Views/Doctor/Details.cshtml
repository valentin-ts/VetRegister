@model DoctorDetailsViewModel

@{
    ViewData["Title"] = "Doctor Details";
}

<form>
    <div class="form-group row">
        <label for="Name" class="col-sm-2 col-form-label">Doctor Name:</label>
        <a for="Name" class="col-sm-10 col-form-label">@Model.Name</a>
    </div>
    <div class="form-group row">
        <label for="Clinic Name" class="col-sm-2 col-form-label">Clinic Name:</label>
        <a for="Age" class="col-sm-10 col-form-label">@Model.ClinicName</a>
    </div>
    <br>


    <div>
        <br>
        <label class="text-body">Procedures done by doctor @Model.Name:</label>
        <br>
    </div>


    <br>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th scope="col">
                    <label>Date</label>
                </th>
                <th scope="col">
                    <label>Description</label>
                </th>
                <th scope="col">
                    <label>Animal</label>
                </th>
                <th scope="col">
                    <label>Details</label>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var procedure in Model.Procedures)
            {
                <tr>
                    <td>@procedure.CreatedOn</td>
                    <td>@procedure.Description</td>
                    <td>@procedure.AnimalName</td>
                    <td>
                        <a class="btn btn-primary" asp-controller="Procedure" asp-action="Details" asp-route-id="@procedure.Id">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <br>



    <br>
    <div>
        <a class="btn btn-primary" asp-controller="Doctor" asp-action="All">Back to All Doctors</a>
    </div>



</form>
