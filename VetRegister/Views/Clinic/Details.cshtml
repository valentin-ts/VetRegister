@model ClinicViewModel

@{
    ViewData["Title"] = "Clinic Details";
}

<form>
    <div class="form-group row">
        <label for="Name" class="col-sm-2 col-form-label">Clinic Name:</label>
        <a for="Name" class="col-sm-10 col-form-label">@Model.Name</a>
    </div>
    <div class="form-group row">
        <label for="Age" class="col-sm-2 col-form-label">Clinic Phone Number:</label>
        <a for="Age" class="col-sm-10 col-form-label">@Model.PhoneNumber</a>
    </div>
    <br>
    <div>
        <br>
        <label class="text-body">Doctors working here:</label>
        <br>
        <ul class="list-group">
            @foreach (var doctor in Model.Doctors)
            {
                <li class="list-group-item">@doctor</li>
            }
        </ul>
    </div>
    <br>
    <div>
        <a class="btn btn-primary" asp-controller="Clinic" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        <a class="btn btn-primary" asp-controller="Clinic" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
    </div>
</form>
