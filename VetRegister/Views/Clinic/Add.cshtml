
@model ClinicFormModel 

@{ 
    ViewData["Title"] = "Add a Clinic";
}

<form method="post">

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" placeholder="New clinic name">
        <span asp-validation-for="Name" class="small text-danger"></span>
        @if (ViewBag.ClinicNameExists)
        {
            <span class="small text-danger">Name is already taken, such a clinic exists.</span>
        }
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" placeholder="New clinic phone number">
        <span asp-validation-for="PhoneNumber" class="small text-danger"></span>
    </div>
    <input class="btn btn-primary float-right" type="submit" value="Save" />
</form>